extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/admin.css")

block content
    .main-content 
        form(action="/password-reset", method="post")
            .form-group.row
                .col-sm-6.col-form-label Password
                .col-sm-12
                    input.form-control(type="password", name="password") 
            .form-group.row
                .col-sm-6.col-form-label Confirm Password
                .col-sm-12
                    input.form-control(type="password", name="confirmedPwd")
                    input(type="hidden", name="_csrf" value = `${csrfToken}`) 
        button.btn.btn-success.d-flex.justify-content-center.mt-4(type="submit" ) Signup
            if(infoMessage.length > 0) 
                div.mt-4.text-center.text-danger #{infoMessage[0]}

