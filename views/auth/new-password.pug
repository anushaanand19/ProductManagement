extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/admin.css")

block content
    .main-content.d-flex
        form(action="/new-password", method="post")
            .form-group.row
                .col-sm-6.col-form-label Password
                .col-sm-12
                    input.form-control(type="password", name="password") 
            .form-group.row
                .col-sm-6.col-form-label Confirm Password
                .col-sm-12
                    input.form-control(type="password", name="confirmedPwd")
                    input(type="hidden", name="_csrf" value = `${csrfToken}`) 
                    input(type="hidden", name="userID" value = `${userID}`) 
                    input(type="hidden", name="token" value = `${token}`) 
                    button.btn.btn-success.d-flex.mt-4(type="submit" ) Submit
            if(errorMessage.length > 0) 
                div.text-center.text-danger #{errorMessage[0]}

